    margin-bottom:0.5em;
  }
  .div_buttons{
    margin-top:3em;
  }

  .logout-button-position{
    position: fixed !important;
    bottom: 0px !important;
    right: 0px !important;
  }
</style>

  <body class="text-light bg-dark">
    <nav style="background-color: #111 !important;" class="navbar navbar-dark bg-dark navbar-expand-lg">
      <ul class="navbar-nav" style="width: 100%">
        <li class="float-left"><a class="navbar-brand" href="/index">Index</a></li>
      </ul>
      <% if user_signed_in? %>
        <span class="navbar-text text-light">
          <%= current_user.email %>
        </span>
      <% end %>
