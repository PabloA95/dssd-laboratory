<div class="col-5 mx-auto mt-3">
  <div class="card bg-dark text-">
    <h5>Cantidad de proyectos finalizados con nota promedio mayor o igual que 5: <%= @projects.size %></h5>
  </div>

  <div class="mt-3 mb-3">
    <h4>Lista de proyectos</h4>
    <br>
    <% @projects.each do |p| %>
      <div class="mt-2">
        <h5>Proyecto <%= p.name %></h5>
        <% p.instances.each do |i| %>
          <h6>Protocolo <%= i.protocol.name %> - Nota <%= i.score %></h6>
        <% end %>
      </div>
      <br>
    <% end %>
  </div>
</div>
