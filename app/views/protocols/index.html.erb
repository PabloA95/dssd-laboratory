<p id="notice"><%= notice %></p>

<h1>Protocolos</h1>

<table class="table table-dark">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Local</th>
      <th>Actividades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @protocols.each do |protocol| %>
      <tr>
        <td><%= protocol.name %></td>
        <td><%= protocol.local %></td>
        <% protocol.activities.each do |e| %>
          <td><%= e.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="div_buttons">
  <%= link_to 'Crear protocolo', new_protocol_path, class: "btn btn-primary my_button" %>
  <a class="btn btn-primary my_button" href="/index">Volver a inicio</a>
</div>
